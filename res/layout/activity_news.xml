        <!-- title -->
	<RelativeLayout  
	android:id="@+id/c_title_layout"  
    android:layout_width="fill_parent"  
    android:layout_height="55dp"
    android:background="#82d3f2"
    >  
    <ImageView  
        android:id="@+id/news_title_theme"     
        android:layout_width="38dp"
        android:layout_height="38dp"     
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"  
        android:layout_marginRight="17.5dp"  
        android:background="@drawable/main_menu"/>     
    <TextView  
        android:id="@+id/news_title_text"     
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"     
        android:layout_centerInParent="true"  
        android:textSize="25sp"   
        android:textColor="#ffffffff"  
        android:textStyle="bold"
        android:text="@string/title_activity_news"/>     
	</RelativeLayout>
	<ListView 
        android:id="@+id/news_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollingCache="false"
        android:listSelector="@drawable/list_selector"
        android:divider="#82d3f2"  
    	android:dividerHeight="1px"
    />
	</LinearLayout>