<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

	<!-- title -->
         
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:layout_weight="1000"
          android:background="@drawable/h_bg"
          android:orientation="vertical" >
       		 
		 <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:layout_weight="80"
         />
		<!-- 头像布局 -->
		 <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:layout_weight="170"
   		  android:weightSum="540"
   		  android:orientation="horizontal" 
         >
         	<LinearLayout
	          android:layout_width="0dp"
	          android:layout_height="170dp"
	          android:layout_weight="190"
	         />
		      <ImageView
			     android:id="@+id/home_icon"
			     android:layout_weight="160"
			     android:layout_height="100dp"
			     android:layout_width="0dp"
			     android:layout_gravity="center_horizontal"
			     android:background="@drawable/h_head_zhaohui" />
		      
		      <LinearLayout
	          android:layout_width="0dp"
	          android:layout_height="170dp"
	          android:layout_weight="190"
	         />
		      
		 </LinearLayout>
		
			<LinearLayout
	          android:layout_width="fill_parent"
	          android:layout_height="0dp"
	          android:layout_weight="20"
	         />
          <TextView
              android:id="@+id/h_person_name"
              android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:layout_weight="40"
              android:layout_gravity="center_horizontal"
              android:textColor="@android:color/white"
              android:text="赵辉" />
			

          <TextView
              android:id="@+id/h_person_where"
              android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:layout_weight="40"
              android:layout_gravity="center_horizontal"
              android:textColor="@android:color/white"
              android:text="网智部泰安分公司" />
			
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="60"
              android:weightSum="100"
              android:orientation="horizontal" >

              <Button
                  android:id="@+id/person_message"
                  android:layout_height="30dp"
                  android:layout_width="0dp"
              	  android:layout_weight="30"
                  android:focusable="false"
                  android:layout_marginLeft="20dp"
                  android:background="@drawable/h_button"
                  android:text="短信" />

              <Button
                  android:id="@+id/person_thing"
                  android:layout_height="30dp"
                  android:layout_width="0dp"
              	  android:layout_weight="30"
                  android:layout_marginLeft="30dp"
                  android:focusable="false"
                 android:background="@drawable/h_button"
                  android:text="未处理事" />

              <Button
                  android:id="@+id/person_zonghe"
                  android:layout_height="30dp"
                  android:layout_width="0dp"
              	  android:layout_weight="30"
                  android:layout_marginLeft="30dp"
                  android:focusable="false"
                  android:background="@drawable/h_button"
                  android:text="综合业务" />
              </LinearLayout>
          </LinearLayout>
    
    <!-- list -->

      <ListView
          android:id="@+id/listview"
          android:layout_width="fill_parent"
          android:layout_height="0dp" 
          android:layout_weight="685"
          >
      </ListView>

</LinearLayout>
